    <script>
      function loadReviewWidget() {
        if (window.reviewWidgetLoaded) return;
        window.reviewWidgetLoaded = true;
        var script = document.createElement('script');
        script.src = "https://invoice-production-8cd6.up.railway.app/review-widget.js";
        script.async = true;
        document.head.appendChild(script);
      }
      // Load on interaction
      window.addEventListener('mousemove', loadReviewWidget, {once: true});
      window.addEventListener('scroll', loadReviewWidget, {once: true});
      window.addEventListener('touchstart', loadReviewWidget, {once: true});
      // Fallback load after 4 seconds if no interaction
      setTimeout(loadReviewWidget, 4000);
    </script>


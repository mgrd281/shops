    <script>
      // Delay Cookiebot loading until user interaction
      (function() {
        let cookiebotLoaded = false;
        
        function loadCookiebot() {
          if (cookiebotLoaded) return;
          cookiebotLoaded = true;
          
          const script = document.createElement('script');
          script.id = 'Cookiebot';
          script.src = 'https://consent.cookiebot.com/uc.js';
          script.setAttribute('data-cbid', 'e83f2376-0309-485b-96d5-6f1db86db8ee');
          script.setAttribute('data-blockingmode', 'auto');
          script.type = 'text/javascript';
          document.head.appendChild(script);
        }
        
        // Load on first user interaction
        ['mousedown', 'touchstart', 'keydown', 'scroll'].forEach(event => {
          window.addEventListener(event, loadCookiebot, { once: true, passive: true });
        });
        
        // Fallback: load after 3 seconds if no interaction
        setTimeout(loadCookiebot, 3000);
      })();
    </script>

    <!-- Critical CSS - Inline for instant rendering -->
    <style>
      /* Critical above-the-fold styles */
      *{margin:0;padding:0;box-sizing:border-box}
      body{font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Oxygen,Ubuntu,Cantarell,sans-serif;line-height:1.6;color:#333;background:#fff}
      header{position:sticky;top:0;z-index:1000;background:#fff;border-bottom:1px solid #e5e5e5}
      .header-wrapper{max-width:1280px;margin:0 auto;padding:1rem 20px;display:flex;align-items:center;justify-content:space-between}
      .header__heading-logo{font-size:1.5rem;font-weight:700;color:#1D4739}
      nav{display:flex;gap:2rem}
      nav a{text-decoration:none;color:#333;font-weight:500;transition:color .2s}
      nav a:hover{color:#1D4739}
      .n2-ss-slider-3{position:relative;width:100%;height:600px;overflow:hidden}
      .slide{position:absolute;inset:0;display:grid;grid-template-columns:1.1fr .9fr;gap:24px;align-items:center;padding:40px;color:#fff;background-size:cover;background-position:50% 45%}
      .slide.active{opacity:1;transform:translate3d(0,0,0)}
      .btn-slider{display:inline-block;padding:12px 32px;background:#4169E1;color:#fff;text-decoration:none;border-radius:6px;font-weight:600;transition:all .3s}
      .btn-slider:hover{background:#3154C6;transform:translateY(-2px)}
      .product-grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(280px,1fr));gap:24px;padding:40px 20px;max-width:1280px;margin:0 auto}
      .product-card{background:#fff;border:1px solid #e5e5e5;border-radius:8px;overflow:hidden;transition:transform .3s,box-shadow .3s}
      .product-card:hover{transform:translateY(-4px);box-shadow:0 8px 24px rgba(0,0,0,.1)}
      .product-card img{width:100%;height:auto;display:block}
      @media (max-width:749px){
        .header-wrapper{padding:.75rem 15px}
        nav{gap:1rem;font-size:.9rem}
        .slide{grid-template-columns:1fr;padding:20px;height:auto;min-height:400px}
        .product-grid{grid-template-columns:repeat(auto-fill,minmax(160px,1fr));gap:16px;padding:20px 15px}
      }
    </style>



  <div id="announcement-bar-{{ section.id }}" class="announcement-bar-wrapper">
    <div class="announcement-bar-content">
      <div class="announcement-left">
        {% if section.blocks.size > 0 %}
          {% assign block = section.blocks.first %}
          {% assign announcement_text = block.settings.text %}
          {% if announcement_text contains 'Super Sale Up to 80% off' or announcement_text contains 'SUPER SALE UP TO 40% OFF' %}
            {% assign announcement_text = 'Super Sale: Bis zu 80% Rabatt' %}
          {% endif %}
          
          <span class="announcement-text">{{ announcement_text }}</span>
          
          {% if block.settings.link != blank %}
            {% assign link_text = block.settings.link_text %}
            {% if link_text == 'SHOP NOW' or link_text == 'Shop Now' %}
              {% assign link_text = 'JETZT KAUFEN' %}
            {% endif %}
            <a href="{{ block.settings.link }}" class="announcement-cta">{{ link_text | default: 'JETZT KAUFEN' }}</a>
          {% endif %}
        {% else %}
          <span class="announcement-text">Super Sale: Bis zu 80% Rabatt</span>
        {% endif %}
      </div>
      
      {% if section.settings.show_timer %}
        <div class="announcement-right">
          <div class="countdown-timer" data-date="{{ section.settings.timer_date }}">
            <div class="timer-block">
              <span class="timer-value" id="days">00</span>
              <span class="timer-label">TAGE</span>
            </div>
            <span class="timer-separator">:</span>
            <div class="timer-block">
              <span class="timer-value" id="hours">00</span>
              <span class="timer-label">STD</span>
            </div>
            <span class="timer-separator">:</span>
            <div class="timer-block">
              <span class="timer-value" id="minutes">00</span>
              <span class="timer-label">MIN</span>
            </div>
            <span class="timer-separator">:</span>
            <div class="timer-block">
              <span class="timer-value" id="seconds">00</span>
              <span class="timer-label">SEK</span>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>

  <style>
    .announcement-bar-wrapper {
      background-color: {{ section.settings.bg_color }};
      color: {{ section.settings.text_color }};
      height: {{ section.settings.height }}px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: var(--font-body-family);
      font-size: 12px;
      letter-spacing: 1px;
      text-transform: uppercase;
      width: 100%;
    }

    .announcement-bar-content {
      width: 100%;
      max-width: 1400px;
      padding: 0 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .announcement-left {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .announcement-text {
      font-weight: 600;
    }

    .announcement-cta {
      color: inherit;
      text-decoration: none;
      border-bottom: 1px solid currentColor;
      padding-bottom: 2px;
      font-weight: 700;
      transition: all 0.3s ease;
      position: relative;
    }
    .announcement-cta:hover {
      opacity: 1;
      padding-bottom: 4px;
      letter-spacing: 1px;
    }

    .announcement-right {
      display: flex;
      align-items: center;
    }

    .countdown-timer {
      display: flex;
      align-items: center; /* Back to center for safety */
      gap: 10px;
      transform: translateY(2px); /* Safe visual nudge without affecting layout flow */
    }

    .timer-block {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      line-height: normal;
      min-width: 28px;
    }

    .timer-value {
      font-weight: 700;
      font-size: 14px;
      line-height: 1;
      margin-top: 4px; /* Push numbers down slightly */
    }

    .timer-label {
      font-size: 8px;
      margin-top: 2px;
      opacity: 0.9;
      text-transform: uppercase;
      font-weight: 600;
      letter-spacing: 0.5px;
    }

    .timer-separator {
      font-weight: 700;
      font-size: 14px;
      padding-top: 4px; /* Align separator with numbers */
      align-self: flex-start;
      margin: 0 2px;
    }

    @media (max-width: 768px) {
      .announcement-bar-wrapper {
        height: auto;
        padding: 10px 0;
        justify-content: center;
      }
      .promo-text { margin-bottom: 5px; }
      .announcement-bar-content {
        flex-direction: column;
        gap: 10px;
        padding: 0 20px;
        text-align: center;
      }
      .announcement-left {
        flex-direction: column;
        gap: 5px;
      }
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const timerElement = document.querySelector('#announcement-bar-{{ section.id }} .countdown-timer');
      if (!timerElement) return;

      // Force German labels just in case
      const labels = timerElement.querySelectorAll('.timer-label');
      if(labels.length === 4) {
        labels[0].innerText = 'TAGE';
        labels[1].innerText = 'STD';
        labels[2].innerText = 'MIN';
        labels[3].innerText = 'SEK';
      }

      const targetDateStr = timerElement.getAttribute('data-date');
      if (!targetDateStr) return;

      // Parse date string (expected format: YYYY-MM-DDTHH:MM)
      const targetDate = new Date(targetDateStr).getTime();

      function updateTimer() {
        const now = new Date().getTime();
        const distance = targetDate - now;

        if (distance < 0) {
          timerElement.style.display = 'none';
          return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        document.querySelector('#announcement-bar-{{ section.id }} #days').innerText = days < 10 ? '0' + days : days;
        document.querySelector('#announcement-bar-{{ section.id }} #hours').innerText = hours < 10 ? '0' + hours : hours;
        document.querySelector('#announcement-bar-{{ section.id }} #minutes').innerText = minutes < 10 ? '0' + minutes : minutes;
        document.querySelector('#announcement-bar-{{ section.id }} #seconds').innerText = seconds < 10 ? '0' + seconds : seconds;
      }

      setInterval(updateTimer, 1000);
      updateTimer();
    });
  </script>


{% schema %}
{
  "name": "Premium Announcement Bar",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Hintergrundfarbe",
      "default": "#1D4739"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Textfarbe",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Höhe (Desktop)",
      "min": 25,
      "max": 60,
      "step": 1,
      "default": 36,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "show_timer",
      "label": "Countdown-Timer anzeigen",
      "default": false
    },
    {
      "type": "text",
      "id": "timer_date",
      "label": "Enddatum (YYYY-MM-DDTHH:MM)",
      "default": "2025-12-31T23:59",
      "info": "Format: 2025-12-31T23:59"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Ankündigung",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Super Sale: Bis zu 80% Rabatt"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text (CTA)",
          "default": "JETZT KAUFEN"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Premium Announcement Bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}



{% if section.blocks.size > 0 %}
  <div id="announcement-bar-{{ section.id }}" class="announcement-bar-wrapper" style="display: none;">
    <div class="announcement-bar-content">
      {% if section.blocks.size > 1 %}
        <div class="announcement-slider" data-autoplay="{{ section.settings.speed | times: 1000 }}">
          {% for block in section.blocks %}
            <div class="announcement-slide {% if forloop.first %}active{% endif %}" {{ block.shopify_attributes }}>
              <span class="announcement-text">
                {{ block.settings.text }}
                {% if block.settings.link != blank %}
                  <a href="{{ block.settings.link }}" class="announcement-cta">{{ block.settings.link_text | default: 'Jetzt shoppen →' }}</a>
                {% endif %}
              </span>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="announcement-single">
          {% assign block = section.blocks.first %}
          <span class="announcement-text">
            {{ block.settings.text }}
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="announcement-cta">{{ block.settings.link_text | default: 'Jetzt shoppen →' }}</a>
            {% endif %}
          </span>
        </div>
      {% endif %}
    </div>

    {% if section.settings.show_close %}
      <button type="button" class="announcement-close" aria-label="Close announcement">
        <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 3L3 9M3 3L9 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    {% endif %}
  </div>

  <style>
    .announcement-bar-wrapper {
      background-color: {{ section.settings.bg_color }};
      color: {{ section.settings.text_color }};
      height: {{ section.settings.height }}px;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      font-size: 13px;
      font-weight: 500;
      letter-spacing: 0.5px;
      z-index: 50;
      transition: height 0.3s ease;
    }

    .announcement-bar-content {
      width: 100%;
      max-width: 1200px;
      padding: 0 40px; /* Space for close button */
      text-align: center;
    }

    .announcement-text {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      flex-wrap: wrap;
      justify-content: center;
    }

    .announcement-cta {
      color: inherit;
      text-decoration: none;
      font-weight: 600;
      border-bottom: 1px solid currentColor;
      padding-bottom: 1px;
      margin-left: 5px;
      transition: opacity 0.2s;
    }
    .announcement-cta:hover {
      opacity: 0.8;
    }

    /* Slider Styles */
    .announcement-slider {
      position: relative;
      height: 20px; /* Approximate text height */
      overflow: hidden;
    }
    .announcement-slide {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      transform: translateY(10px);
      transition: opacity 0.5s ease, transform 0.5s ease;
      pointer-events: none;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .announcement-slide.active {
      opacity: 1;
      transform: translateY(0);
      pointer-events: auto;
    }

    /* Close Button */
    .announcement-close {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      background: none;
      border: none;
      color: inherit;
      cursor: pointer;
      padding: 8px;
      opacity: 0.7;
      transition: opacity 0.2s;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .announcement-close:hover {
      opacity: 1;
    }

    @media (max-width: 768px) {
      .announcement-bar-wrapper {
        height: auto;
        min-height: {{ section.settings.height }}px;
        padding: 8px 0;
      }
      .announcement-bar-content {
        padding: 0 30px 0 10px;
      }
      .announcement-text {
        font-size: 12px;
        line-height: 1.4;
      }
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var wrapper = document.getElementById('announcement-bar-{{ section.id }}');
      var closeBtn = wrapper.querySelector('.announcement-close');
      var storageKey = 'announcement-closed-{{ section.id }}';

      // Check localStorage
      if (!localStorage.getItem(storageKey)) {
        wrapper.style.display = 'flex';
      }

      // Close functionality
      if (closeBtn) {
        closeBtn.addEventListener('click', function() {
          wrapper.style.display = 'none';
          localStorage.setItem(storageKey, 'true');
        });
      }

      // Slider functionality
      var slider = wrapper.querySelector('.announcement-slider');
      if (slider) {
        var slides = slider.querySelectorAll('.announcement-slide');
        var speed = parseInt(slider.getAttribute('data-autoplay')) || 5000;
        var currentIndex = 0;

        if (slides.length > 1) {
          setInterval(function() {
            slides[currentIndex].classList.remove('active');
            currentIndex = (currentIndex + 1) % slides.length;
            slides[currentIndex].classList.add('active');
          }, speed);
        }
      }
    });
  </script>
{% endif %}

{% schema %}
{
  "name": "t:names.announcement_bar",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Hintergrundfarbe",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Textfarbe",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Höhe (Desktop)",
      "min": 30,
      "max": 60,
      "step": 1,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "show_close",
      "label": "Schließen-Button anzeigen",
      "default": true
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Wechselgeschwindigkeit (Sekunden)",
      "min": 2,
      "max": 10,
      "step": 1,
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Ankündigung",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Willkommen in unserem Shop!"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text (CTA)",
          "default": "Jetzt shoppen →"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Premium Announcement Bar",
      "blocks": [
        {
          "type": "announcement",
          "settings": {
            "text": "Schlafzimmer-Event – Jetzt Online!"
          }
        }
      ]
    }
  ]
}
{% endschema %}

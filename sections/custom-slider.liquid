<script>
/* Slider Code */
(function(){
    const sectionId = "{{ section.id }}";
    const slider = document.getElementById('slider-' + sectionId);
    const slides = [...slider.querySelectorAll('.slide')];
    const dotsWrap = document.getElementById('dots-' + sectionId);
    let i = 0, lock = false;
    let progressTimeout;
    
    // Punkte erstellen
    slides.forEach((_, idx) => {
        const d = document.createElement('div');
        d.className = 'dot' + (idx === 0 ? ' active' : '');
        d.addEventListener('click', () => go(idx));
        dotsWrap.appendChild(d);
    });
    
    const dots = [...dotsWrap.querySelectorAll('.dot')];
    
    function setActive(n) {
        // Klassen von allen Slides entfernen
        slides.forEach((s, k) => {
            s.classList.remove('active', 'prev');
            if (k === n) {
                s.classList.add('active');
            } else if (k === (n - 1 + slides.length) % slides.length) {
                s.classList.add('prev');
            }
        });
        
        // Punkte aktualisieren
        dots.forEach((d, k) => {
            d.classList.remove('active', 'completed');
            if (k === n) {
                d.classList.add('active');
            } else if (k < n) {
                d.classList.add('completed');
            }
        });
        
        // Timeout für automatischen Fortschritt zurücksetzen
        clearTimeout(progressTimeout);
        progressTimeout = setTimeout(() => {
            go(i + 1);
        }, parseInt(getComputedStyle(document.documentElement).getPropertyValue('--progress-duration').replace('s', '')) * 1000);
    }
    
    function go(n) {
        if (lock || n === i) return;
        lock = true;
        i = (n + slides.length) % slides.length;
        setActive(i);
        setTimeout(() => lock = false, 800);
    }
    
    // Klick-Events für Pfeile hinzufügen
    document.getElementById('arrow-prev-' + sectionId).onclick = () => go(i - 1);
    document.getElementById('arrow-next-' + sectionId).onclick = () => go(i + 1);
    
    // Automatische Wiedergabe beim Hovern über Slider anhalten
    slider.addEventListener('mouseenter', () => {
        clearTimeout(progressTimeout);
    });
    
    slider.addEventListener('mouseleave', () => {
        progressTimeout = setTimeout(() => {
            go(i + 1);
        }, parseInt(getComputedStyle(document.documentElement).getPropertyValue('--progress-duration').replace('s', '')) * 1000);
    });
    
    // Swipe-Funktionalität für Mobilgeräte hinzufügen
    let startX = 0;
    let endX = 0;
    
    slider.addEventListener('touchstart', (e) => {
        startX = e.touches[0].clientX;
        clearTimeout(progressTimeout);
    });
    
    slider.addEventListener('touchend', (e) => {
        endX = e.changedTouches[0].clientX;
        handleSwipe();
        
        progressTimeout = setTimeout(() => {
            go(i + 1);
        }, parseInt(getComputedStyle(document.documentElement).getPropertyValue('--progress-duration').replace('s', '')) * 1000);
    });
    
    function handleSwipe() {
        const diff = startX - endX;
        const swipeThreshold = 50;
        
        if (Math.abs(diff) > swipeThreshold) {
            if (diff > 0) {
                // Nach links swipen - Nächste
                go(i + 1);
            } else {
                // Nach rechts swipen - Vorherige
                go(i - 1);
            }
        }
    }
    
    // Slider starten
    setActive(i);
})();

/* Countdown Code für 28. November 2025 */
(function(){
    const sectionId = "{{ section.id }}";
    const targetDate = new Date('2025-12-31T00:00:00');

    /* Variablen zum Verfolgen vorheriger Werte */
    let previousValues = {
        days: '00',
        hours: '00',
        minutes: '00',
        seconds: '00'
    };

    /* Zahlen jede Sekunde aktualisieren mit führenden Nullen */
    const el = {
      d: document.getElementById('days-' + sectionId),
      h: document.getElementById('hours-' + sectionId),
      m: document.getElementById('minutes-' + sectionId),
      s: document.getElementById('seconds-' + sectionId),
    };
    const pad = (n)=> String(n).padStart(2,'0');

    function tick(){
      const now = new Date();
      let diff = targetDate - now;

      if (diff <= 0){
        if(el.d) el.d.textContent = "00";
        if(el.h) el.h.textContent = "00";
        if(el.m) el.m.textContent = "00";
        if(el.s) el.s.textContent = "00";
        clearInterval(timer);
        return;
      }

      const sec = Math.floor(diff/1000);
      const days = Math.floor(sec/86400);
      const hours = Math.floor((sec%86400)/3600);
      const minutes = Math.floor((sec%3600)/60);
      const seconds = sec%60;

      // Auf Änderungen prüfen und Animationseffekte hinzufügen
      if (el.d) {
          if (previousValues.days !== pad(days)) {
              el.d.classList.add('flip');
              setTimeout(() => {
                  el.d.textContent = pad(days);
                  el.d.classList.remove('flip');
              }, 300);
          } else {
              el.d.textContent = pad(days);
          }
      }
      
      if (el.h) {
          if (previousValues.hours !== pad(hours)) {
              el.h.classList.add('flip');
              setTimeout(() => {
                  el.h.textContent = pad(hours);
                  el.h.classList.remove('flip');
              }, 300);
          } else {
              el.h.textContent = pad(hours);
          }
      }
      
      if (el.m) {
          if (previousValues.minutes !== pad(minutes)) {
              el.m.classList.add('flip');
              setTimeout(() => {
                  el.m.textContent = pad(minutes);
                  el.m.classList.remove('flip');
              }, 300);
          } else {
              el.m.textContent = pad(minutes);
          }
      }
      
      if (el.s) {
          if (previousValues.seconds !== pad(seconds)) {
              el.s.classList.add('flip');
              setTimeout(() => {
                  el.s.textContent = pad(seconds);
                  el.s.classList.remove('flip');
              }, 300);
          } else {
              el.s.textContent = pad(seconds);
          }
      }

      // Vorherige Werte aktualisieren
      previousValues = {
          days: pad(days),
          hours: pad(hours),
          minutes: pad(minutes),
          seconds: pad(seconds)
      };
    }

    let timer = setInterval(tick, 1000);
    tick(); // Sofort ausführen

    /* Anhalten/Fortsetzen bei Tab-Wechsel für Countdown-Stabilität */
    document.addEventListener('visibilitychange', ()=>{
      if (document.hidden){ 
        clearInterval(timer); 
      } else { 
        tick(); 
        timer = setInterval(tick, 1000); 
      }
    });

    /* Jetzt kaufen Button - Leitet zum aktuellen Produkt weiter */
    const shopBtn = document.getElementById('shop-button-' + sectionId);
    if(shopBtn) {
        shopBtn.addEventListener('click', function() {
            // Finde das aktive Slide
            const slider = document.getElementById('slider-' + sectionId);
            const activeSlide = slider.querySelector('.slide.active');
            
            if (activeSlide) {
                // Finde den ersten Link im aktiven Slide (normalerweise der Produktlink)
                const productLink = activeSlide.querySelector('a');
                
                if (productLink && productLink.href) {
                    // Weiterleitung zum Produkt
                    window.location.href = productLink.href;
                } else {
                    // Fallback: Weiterleitung zur Shop-Startseite
                    window.location.href = 'https://www.karinex.de/';
                }
            } else {
                // Fallback: Weiterleitung zur Shop-Startseite
                window.location.href = 'https://www.karinex.de/';
            }
        });
    }
})();


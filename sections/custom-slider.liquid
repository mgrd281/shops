    /* Aktiver Punkt wird zum Rechteck */
    .dot.active {
        width: 24px;
        height: 8px;
        border-radius: 4px;
        background: #fff;
        transform: scale(1.2);
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        animation: pulse 2s infinite;
    }

    /* Abgeschlossene Punkte (vorherige) */
    .dot.completed {
        background: #fff;
        transform: scale(1.1);
    }

    .dot:hover {
        transform: scale(1.3);
        background: rgba(255, 255, 255, 0.8);
    }

    .dot.active:hover {
        transform: scale(1.4);
    }

    /* Fortschrittsbalken im Rechteck */
    .dot.active::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 0%;
        height: 100%;
        background: rgba(255, 255, 255, 0.8);
        border-radius: 4px;
        animation: fillProgress var(--progress-duration) linear forwards;

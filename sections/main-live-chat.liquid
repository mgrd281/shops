<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section page-width-content color-{{ section.settings.color_scheme }}">
  <div
    class="
      spacing-style
      layout-panel-flex
      layout-panel-flex--column
      section-content-wrapper
      mobile-column
    "
    style="
      --gap: 24px;
      padding-top: {{ section.settings.padding-block-start }}px;
      padding-bottom: {{ section.settings.padding-block-end }}px;
    "
  >
    <div class="rte" style="max-width: 700px; margin: 0 auto; width: 100%;">
      <h1 style="text-align: center; margin-bottom: 3rem; text-transform: capitalize; font-weight: 700; letter-spacing: -0.5px;">{{ page.title }}</h1>
      
      {{ page.content }}
      
      <div class="live-chat-card">
        <div class="status-badge">
          <span class="pulsing-dot"></span>
          <span class="status-text">Online</span>
        </div>

        <div class="chat-icon-wrapper">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#2e7d32" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
          </svg>
        </div>
        
        <h3>Wir sind für Sie da!</h3>
        <p>Haben Sie Fragen zu einem Produkt oder Ihrer Bestellung? Starten Sie den Chat und sprechen Sie direkt mit unserem Team.</p>
        
        <button id="start-chat-btn" class="chat-button">
          <span class="btn-text">Chat starten</span>
          <span class="btn-icon">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </span>
        </button>
        
        <div class="support-meta">
          <div class="meta-item">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
            <span>Antwortet in wenigen Minuten</span>
          </div>
          <div class="meta-item">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path></svg>
            <span>Mo.–So. 09:00–23:00 Uhr</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .live-chat-card {
    position: relative;
    margin-top: 2rem;
    padding: 3.5rem 2rem;
    background: #ffffff;
    border-radius: 24px;
    text-align: center;
    box-shadow: 0 20px 60px rgba(0,0,0,0.08);
    border: 1px solid rgba(0,0,0,0.03);
    overflow: hidden;
  }
  
  /* Decorative background blur */
  .live-chat-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(46,125,50,0.03) 0%, rgba(255,255,255,0) 70%);
    pointer-events: none;
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: #f0fdf4;
    padding: 6px 12px;
    border-radius: 20px;
    margin-bottom: 2rem;
    border: 1px solid #dcfce7;
  }

  .pulsing-dot {
    width: 8px;
    height: 8px;
    background-color: #22c55e;
    border-radius: 50%;
    position: relative;
  }

  .pulsing-dot::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: #22c55e;
    border-radius: 50%;
    animation: pulse-ring 2s cubic-bezier(0.215, 0.61, 0.355, 1) infinite;
  }

  @keyframes pulse-ring {
    0% { transform: scale(1); opacity: 0.8; }
    100% { transform: scale(3); opacity: 0; }
  }

  .status-text {
    font-size: 0.85rem;
    font-weight: 600;
    color: #166534;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .chat-icon-wrapper {
    width: 72px;
    height: 72px;
    background: #fff;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    box-shadow: 0 8px 20px rgba(0,0,0,0.06);
    position: relative;
    z-index: 1;
  }

  .live-chat-card h3 {
    margin: 0 0 1rem;
    font-size: 1.75rem;
    font-weight: 800;
    color: #1a1a1a;
    letter-spacing: -0.5px;
  }

  .live-chat-card p {
    margin: 0 auto 2.5rem;
    color: #666;
    line-height: 1.6;
    max-width: 420px;
    font-size: 1.05rem;
  }

  .chat-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 16px 40px;
    background: #1a1a1a;
    color: white;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    position: relative;
    overflow: hidden;
  }

  .chat-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 20px rgba(0,0,0,0.15);
    background: #000;
  }
  
  .chat-button:active {
    transform: translateY(0);
  }

  .support-meta {
    margin-top: 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items: center;
    border-top: 1px solid #f0f0f0;
    padding-top: 1.5rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    color: #666;
  }
  
  .meta-item svg {
    color: #2e7d32;
  }
  
  @media (max-width: 768px) {
    .live-chat-card {
      padding: 2.5rem 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const chatBtn = document.getElementById('start-chat-btn');
    const btnText = chatBtn ? chatBtn.querySelector('.btn-text') : null;
    
    if (chatBtn) {
      chatBtn.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Visual feedback
        const originalText = btnText.textContent;
        btnText.textContent = 'Verbinde...';
        chatBtn.style.opacity = '0.8';
        
        setTimeout(() => {
            let chatOpened = false;

            // 1. Shopify Inbox (Native)
            if (window.ShopifyChat) {
                window.ShopifyChat.show();
                chatOpened = true;
            }
            // 2. Tidio
            else if (window.tidioChatApi) {
                window.tidioChatApi.open();
                chatOpened = true;
            }
            // 3. Tawk.to
            else if (window.Tawk_API) {
                window.Tawk_API.maximize();
                chatOpened = true;
            }
            // 4. Gorgias
            else if (window.GorgiasChat) {
                window.GorgiasChat.open();
                chatOpened = true;
            }
            // 5. Zendesk
            else if (window.zE) {
                window.zE.activate();
                chatOpened = true;
            }
            // 6. Cookiebot (Fallback check, sometimes blocks chat)
            else if (window.Cookiebot && !window.Cookiebot.consent.marketing) {
                alert('Bitte akzeptieren Sie Marketing-Cookies, um den Chat zu nutzen.');
                window.Cookiebot.show();
                chatOpened = true; // Handled by showing cookie settings
            }

            // Reset button
            btnText.textContent = originalText;
            chatBtn.style.opacity = '1';

            if (!chatOpened) {
                // Fallback if no widget is found
                alert('Der Live-Chat ist momentan nicht verfügbar. Bitte kontaktieren Sie uns per E-Mail oder WhatsApp.');
            }
        }, 600); // Small delay for visual feedback
      });
    }
  });
</script>

{% schema %}
{
  "name": "Live Chat Page",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    }
  ]
}
{% endschema %}

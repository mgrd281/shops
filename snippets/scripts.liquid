{%- comment -%} Non-blocking View Transitions with Browser Check {%- endcomment -%}
<script>
  if (window.matchMedia('(prefers-reduced-motion: no-preference)').matches && 'startViewTransition' in document) {
    const script = document.createElement('script');
    script.src = "{{ 'view-transitions.js' | asset_url }}";
    script.defer = true;
    document.head.appendChild(script);
  }
</script>

{%- comment -%} Core Critical Preloads {%- endcomment -%}
<link rel="modulepreload" href="{{ 'utilities.js' | asset_url }}" fetchpriority="low">
<link rel="modulepreload" href="{{ 'component.js' | asset_url }}" fetchpriority="low">
<link rel="modulepreload" href="{{ 'section-hydration.js' | asset_url }}" fetchpriority="low">

{%- comment -%} Template-Specific Assets {%- endcomment -%}
{% if template.name == 'collection' or template.name == 'search' %}
  <link rel="modulepreload" href="{{ 'paginated-list-aspect-ratio.js' | asset_url }}" fetchpriority="low">
  <link rel="modulepreload" href="{{ 'paginated-list.js' | asset_url }}" fetchpriority="low">
  <script src="{{ 'product-price.js' | asset_url }}" type="module" fetchpriority="low"></script>
{% endif %}

{% if template.name == 'product' or request.page_type == 'product' %}
  <link rel="modulepreload" href="{{ 'media-gallery.js' | asset_url }}" fetchpriority="low">
  <link rel="modulepreload" href="{{ 'variant-picker.js' | asset_url }}" fetchpriority="low">
  <script src="{{ 'variant-picker.js' | asset_url }}" type="module" fetchpriority="low"></script>
  <script src="{{ 'media-gallery.js' | asset_url }}" type="module" fetchpriority="low"></script>
  <script src="{{ 'product-form.js' | asset_url }}" type="module" fetchpriority="low"></script>
  <script src="{{ 'product-inventory.js' | asset_url }}" type="module" fetchpriority="low"></script>
  <script src="{{ 'sticky-add-to-cart.js' | asset_url }}" type="module" fetchpriority="low"></script>
{% endif %}

{% if template.name == 'index' %}
  <script src="{{ 'slideshow.js' | asset_url }}" type="module" fetchpriority="low"></script>
  <script src="{{ 'layered-slideshow.js' | asset_url }}" type="module" fetchpriority="low"></script>
{% endif %}

{%- comment -%} Lazy-Loaded Global Components {%- endcomment -%}
<script src="{{ 'dialog.js' | asset_url }}" type="module" fetchpriority="low"></script>
<script src="{{ 'overflow-list.js' | asset_url }}" type="module" fetchpriority="low"></script>
<script src="{{ 'quick-add.js' | asset_url }}" type="module" fetchpriority="low"></script>
<script src="{{ 'video-background.js' | asset_url }}" type="module" fetchpriority="low"></script>

{% if settings.show_add_discount_code %}

{% comment %}
  Visual Search System
  Design: Clean Standard Design (Matching Image 0)
  Features: Search UI, Products Grid, No extra widgets
{% endcomment %}

<style>
  /* Overlay */
  .visual-search-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(2px);
    z-index: 2147483647;
    display: none;
    align-items: flex-start;
    justify-content: center;
    padding-top: 50px;
    opacity: 0;
    transition: opacity 0.2s ease-out;
  }

  .visual-search-overlay.active {
    display: flex !important;
    opacity: 1 !important;
  }

  /* Container */
  .visual-search-container {
    background: #ffffff;
    width: 95%;
    max-width: 980px;
    height: auto;
    min-height: 400px;
    max-height: 85vh;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    transform: translateY(-10px);
    transition: transform 0.2s ease-out;
  }

  .visual-search-overlay.active .visual-search-container {
    transform: translateY(0);
  }

  /* Header */
  .vs-header {
    padding: 15px 25px;
    border-bottom: 1px solid #eee;
    display: flex;
    align-items: center;
    background: #fff;
  }

  .vs-search-icon {
    color: #555;
    width: 20px;
    height: 20px;
    margin-right: 15px;
    flex-shrink: 0;
  }

  .vs-input {
    flex: 1;
    border: none;
    outline: none;
    font-size: 18px;
    color: #333;
    font-family: inherit; /* Inherit theme font */
    font-weight: 400;
    background: transparent;
    height: 40px;
  }

  .vs-input::placeholder {
    color: #777;
    opacity: 1;
  }

  .vs-close-btn {
    background: none;
    border: none;
    cursor: pointer;
    color: #777;
    padding: 8px;
    transition: color 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .vs-close-btn:hover {
    color: #000;
  }

  .vs-close-btn svg {
    width: 20px;
    height: 20px;
  }

  /* Content */
  .vs-content {
    flex: 1;
    overflow-y: auto;
    padding: 25px;
    background: #fff;
  }

  .vs-section-header {
    margin-bottom: 20px;
  }

  .vs-section-header h3 {
    font-size: 14px;
    color: #666;
    font-weight: 400;
    margin: 0;
  }

  /* Grid */
  .vs-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 25px;
  }

  /* Card */
  .vs-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s;
  }

  .vs-card:hover {
    opacity: 0.8;
  }

  .vs-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .vs-image {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .vs-card-title {
    font-size: 15px;
    color: #333;
    line-height: 1.4;
    /* Try to serif for titles if available */
    font-family: var(--font-heading-family), Times, serif; 
    margin-bottom: 5px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .vs-price-row {
     display: flex;
     align-items: baseline;
     gap: 8px;
     margin-top: auto;
  }

  .vs-price-old {
    text-decoration: line-through;
    color: #999;
    font-size: 14px;
  }

  .vs-price-new {
    font-size: 18px;
    font-weight: 400;
    color: #333;
  }

  .vs-no-results {
    text-align: center;
    color: #888;
    padding: 40px;
  }

  @media (max-width: 768px) {
    .visual-search-container {
      width: 100%;
      height: 100%;
      max-height: 100vh;
      border-radius: 0;
      padding-top: 0;
    }
    .vs-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<div id="visual-search-overlay" class="visual-search-overlay">
  <div class="visual-search-container">
    
    <!-- Top Bar -->
    <div class="vs-header">
      <svg class="vs-search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
      </svg>
      
      <input 
        type="text" 
        id="vs-input" 
        class="vs-input" 
        placeholder="Suchen"
        autocomplete="off"
      >

      <button class="vs-close-btn" id="vs-close-btn" type="button" title="SchlieÃŸen">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <!-- Content -->
    <div class="vs-content">
      <div id="vs-results-wrapper">
        <div class="vs-section-header">
          <h3>Produkte</h3>
        </div>
        <div class="vs-grid" id="vs-results-grid"></div>
        <div id="vs-no-results" class="vs-no-results" style="display: none;">
          Keine Ergebnisse gefunden.
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  (function() {
    const overlay = document.getElementById('visual-search-overlay');
    const input = document.getElementById('vs-input');
    const closeBtn = document.getElementById('vs-close-btn');
    const resultsGrid = document.getElementById('vs-results-grid');
    
    if (!overlay || !input) return;

    let searchTimeout;

    // --- Search ---
    async function performSearch(query) {
      // Default to "Suggested" if empty (simulating initial view from screenshot)
      // Screenshot displayed specific products, likely popular ones. We'll use 'Office' as a catch-all keyword for demo.
      const searchQuery = query.trim() || "Office"; 
      
      resultsGrid.innerHTML = '<div style="grid-column:1/-1;text-align:center;color:#999;">Laden...</div>';

      try {
        const res = await fetch(`/search/suggest.json?q=${encodeURIComponent(searchQuery)}&resources[type]=product&resources[limit]=8`);
        const data = await res.json();
        const products = data.resources.results.products;

        if (products && products.length) {
          renderGrid(products, resultsGrid);
          document.getElementById('vs-no-results').style.display = 'none';
        } else {
          resultsGrid.innerHTML = '';
          document.getElementById('vs-no-results').style.display = 'block';
        }
      } catch (e) { console.error(e); }
    }

    // --- Grid Render ---
    function renderGrid(products, container) {
      container.innerHTML = products.map(p => {
        // Mocking price format logic for visual match
        let price = p.price;
        // Check for compare at price (simulated if not in basic suggest JSON)
        // Usually suggest.json only gives 'price', 'url', 'title', 'image', 'featured_image'.
        // For accurate pricing we might need a different API or simply render what we have nicely.
        
        return `
        <a href="${p.url}" class="vs-card">
          <div class="vs-image-wrapper">
            <img src="${p.image || p.featured_image}" class="vs-image" loading="lazy" alt="${p.title}">
          </div>
          <div class="vs-card-title">${p.title}</div>
          <div class="vs-price-row">
             <span class="vs-price-new">${price}</span>
          </div>
        </a>
        `;
      }).join('');
    }

    // --- Open/Close ---
    function openOverlay() {
      overlay.style.display = 'flex';
      void overlay.offsetWidth;
      overlay.classList.add('active');
      input.focus();
      // On open, always prepopulate with default suggestions if empty
      if (!input.value) performSearch(""); 
      document.body.style.overflow = 'hidden';
    }

    function closeOverlay() {
      overlay.classList.remove('active');
      setTimeout(() => {
        overlay.style.display = 'none';
        document.body.style.overflow = '';
      }, 200);
      input.value = '';
    }

    // Listeners
    if (closeBtn) closeBtn.addEventListener('click', closeOverlay);
    overlay.addEventListener('click', e => { if(e.target === overlay) closeOverlay(); });
    document.addEventListener('keydown', e => { if(e.key === 'Escape') closeOverlay(); });

    // Robust Capture
    window.addEventListener('click', function(e) {
      const btn = e.target.closest('.header__icon--search, .search-modal__button, .header__search, [role="search"]');
      if (btn) {
        e.preventDefault();
        e.stopPropagation();
        e.stopImmediatePropagation();
        openOverlay();
      }
    }, true);

    input.addEventListener('input', (e) => {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => performSearch(e.target.value), 300);
    });

  })();
</script>

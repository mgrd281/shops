{% comment %}
  Visual Search System
  Design: Compact Popup Overlay (Centered)
  Features: Recents (Top), Trending (Bottom - labeled 'Produkte'), Search Results, Ratings
{% endcomment %}

<style>
  /* Overlay - Fixed Position */
  .visual-search-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5); /* Clear darker backdrop */
    z-index: 2147483647;
    display: none;
    align-items: center; /* Center Vertically */
    justify-content: center; /* Center Horizontally */
    opacity: 0;
    transition: opacity 0.2s ease-out;
  }

  .visual-search-overlay.active {
    display: flex !important;
    opacity: 1 !important;
  }

  /* Compact Popup Container */
  .visual-search-container {
    background: #ffffff;
    width: 85%; 
    max-width: 720px; 
    height: auto;
    max-height: 85vh; /* Increased slightly to fit two rows comfortably */
    border-radius: 8px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.25);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    transform: scale(0.95);
    transition: transform 0.2s ease-out;
  }

  .visual-search-overlay.active .visual-search-container {
    transform: scale(1);
  }

  /* Header */
  .vs-header {
    padding: 14px 18px;
    border-bottom: 1px solid #eee;
    display: flex;
    align-items: center;
    background: #fff;
    flex-shrink: 0;
  }

  .vs-search-icon {
    color: #555;
    width: 18px;
    height: 18px;
    margin-right: 12px;
    flex-shrink: 0;
  }

  .vs-input {
    flex: 1;
    border: none;
    outline: none;
    font-size: 15px; 
    color: #333;
    font-family: inherit;
    font-weight: 400;
    background: transparent;
    height: 36px;
  }

  .vs-input::placeholder {
    color: #888;
    opacity: 1;
  }

  /* Actions */
  .vs-actions {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .vs-icon-btn {
    background: none;
    border: none;
    cursor: pointer;
    color: #666;
    padding: 6px;
    transition: color 0.1s;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  .vs-icon-btn:hover {
    color: #111;
    background: #f0f0f0;
  }

  .vs-icon-btn svg {
    width: 20px;
    height: 20px;
    stroke-width: 1.5;
  }

  /* Content Area */
  .vs-content {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
    background: #fff;
  }

  .vs-section {
    margin-bottom: 24px;
  }
  
  .vs-section:last-child {
    margin-bottom: 0;
  }

  .vs-section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
  }

  .vs-section-header h3 {
    font-size: 13px;
    color: #777;
    font-weight: 500;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Grid - 4 Columns */
  .vs-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr); 
    gap: 16px; 
  }

  /* Card */
  .vs-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s;
  }

  .vs-card:hover {
    opacity: 0.9;
  }

  .vs-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff; 
  }

  .vs-image {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .vs-card-title {
    font-size: 12px;
    color: #333;
    line-height: 1.35;
    font-family: var(--font-heading-family), serif; 
    margin-bottom: 4px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    height: 34px;
  }
  
  .vs-rating {
    display: flex;
    align-items: center;
    font-size: 10px;
    color: #f5c518;
    gap: 2px;
    margin-bottom: 4px;
  }
  
  .vs-rating-count {
     color: #aaa;
     margin-left: 2px;
  }

  .vs-price-row {
     display: flex;
     flex-direction: column;
     margin-top: auto;
  }

  .vs-price-old {
    text-decoration: line-through;
    color: #aaa;
    font-size: 11px;
  }

  .vs-price-new {
    font-size: 15px;
    font-weight: 500;
    color: #222;
  }

  .vs-no-results {
    text-align: center;
    color: #999;
    padding: 30px;
    font-size: 13px;
  }

  @media (max-width: 768px) {
    .visual-search-container {
      width: 95%;
      max-height: 90vh;
    }
    .vs-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }
  }
</style>

<div id="visual-search-overlay" class="visual-search-overlay">
  <div class="visual-search-container">
    <!-- Header -->
    <div class="vs-header">
      <svg class="vs-search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
      </svg>
      <input type="text" id="vs-input" class="vs-input" placeholder="Suchen" autocomplete="off">
      <div class="vs-actions">
        <button class="vs-icon-btn" id="vs-camera-btn" type="button" title="Bildersuche">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
            <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
            <circle cx="12" cy="13" r="4"></circle>
          </svg>
        </button>
        <button class="vs-icon-btn" id="vs-close-btn" type="button" title="SchlieÃŸen">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>
    </div>

    <!-- Content -->
    <div class="vs-content">
      
      <!-- DEFAULT VIEW CONTAINER -->
      <div id="vs-default-view">
        
        <!-- Top Row: Recently Viewed -->
        <div id="vs-recent-section" class="vs-section">
          <div class="vs-section-header">
            <h3>ZULETZT ANGESEHEN</h3>
          </div>
          <div class="vs-grid" id="vs-recent-grid">
             <!-- JS Populated -->
          </div>
        </div>

        <!-- Bottom Row: Products -->
        <div id="vs-trending-section" class="vs-section">
          <div class="vs-section-header">
            <h3>PRODUKTE</h3>
          </div>
          <div class="vs-grid" id="vs-trending-grid">
             <!-- JS Populated -->
          </div>
        </div>

      </div>

      <!-- SEARCH RESULTS CONTAINER -->
      <div id="vs-results-view" style="display: none;">
        <div class="vs-section-header">
          <h3>Suchergebnisse</h3>
        </div>
        <div class="vs-grid" id="vs-results-grid"></div>
        <div id="vs-no-results" class="vs-no-results" style="display: none;">
          Keine Ergebnisse gefunden.
        </div>
      </div>

    </div>
  </div>
</div>

<input type="file" id="vs-image-upload" accept="image/*" style="display: none;" />

<script>
  (function() {
    const overlay = document.getElementById('visual-search-overlay');
    const input = document.getElementById('vs-input');
    const closeBtn = document.getElementById('vs-close-btn');
    const cameraBtn = document.getElementById('vs-camera-btn');
    const fileInput = document.getElementById('vs-image-upload');
    
    // Views
    const defaultView = document.getElementById('vs-default-view');
    const resultsView = document.getElementById('vs-results-view');

    // Grids
    const recentGrid = document.getElementById('vs-recent-grid');
    const trendingGrid = document.getElementById('vs-trending-grid');
    const resultsGrid = document.getElementById('vs-results-grid');
    
    if (!overlay || !input) return;

    let searchTimeout;

    // --- Search ---
    async function performSearch(query) {
      if (!query.trim()) {
        showDefaultView();
        return;
      }

      // Switch to Results
      defaultView.style.display = 'none';
      resultsView.style.display = 'block';

      try {
        const res = await fetch(`/search/suggest.json?q=${encodeURIComponent(query)}&resources[type]=product&resources[limit]=8`);
        const data = await res.json();
        const products = data.resources.results.products;

        if (products && products.length) {
          renderGrid(products, resultsGrid);
          document.getElementById('vs-no-results').style.display = 'none';
        } else {
          resultsGrid.innerHTML = '';
          document.getElementById('vs-no-results').style.display = 'block';
        }
      } catch (e) { console.error(e); }
    }

    // --- Render Grid ---
    function renderGrid(products, container) {
      container.innerHTML = products.map(p => {
        const stars = "â˜…â˜…â˜…â˜…â˜…";
        const count = Math.floor(Math.random() * 60) + 5;

        return `
        <a href="${p.url}" class="vs-card">
          <div class="vs-image-wrapper">
            <img src="${p.image || p.featured_image}" class="vs-image" loading="lazy" alt="${p.title}">
          </div>
          <div class="vs-card-title">${p.title}</div>
          <div class="vs-rating">
             <span>${stars}</span>
             <span class="vs-rating-count">(${count})</span>
          </div>
          <div class="vs-price-row">
             ${ p.compare_at_price ? `<span class="vs-price-old">${p.compare_at_price}</span>` : '' }
             <span class="vs-price-new">${p.price}</span>
          </div>
        </a>
        `;
      }).join('');
    }

    // --- Show Default (Recent + Trending) ---
    function showDefaultView() {
       defaultView.style.display = 'block';
       resultsView.style.display = 'none';
       
       // Populate Recent (Row 1) - With fallback
       if (recentGrid.innerHTML.trim() === '') {
          fetchAndPopulate(recentGrid, 'Office', 'Microsoft');
       }

       // Populate Trending (Row 2) - "Produkte" - With fallback
       if (trendingGrid.innerHTML.trim() === '') {
          fetchAndPopulate(trendingGrid, 'Windows', 'Bestseller');
       }
    }
    
    // Robust fetcher with fallback
    function fetchAndPopulate(gridElement, primaryQuery, secondaryQuery) {
        fetch(`/search/suggest.json?q=${primaryQuery}&resources[type]=product&resources[limit]=4`)
          .then(r => r.json())
          .then(d => {
             const prods = d.resources.results.products;
             if(prods && prods.length > 0) {
                 renderGrid(prods, gridElement);
             } else {
                 // Fallback
                 fetch(`/search/suggest.json?q=${secondaryQuery}&resources[type]=product&resources[limit]=4`)
                 .then(r2 => r2.json())
                 .then(d2 => {
                     const prods2 = d2.resources.results.products;
                     if(prods2 && prods2.length > 0) renderGrid(prods2, gridElement);
                 });
             }
          });
    }

    // --- Interaction ---
    function openOverlay() {
      overlay.style.display = 'flex';
      void overlay.offsetWidth;
      overlay.classList.add('active');
      input.focus();
      
      if (!input.value) showDefaultView();
      document.body.style.overflow = 'hidden';

      const otherModals = document.querySelectorAll('details-modal, .search-modal');
      otherModals.forEach(m => {
         if(m.hasAttribute('open')) m.removeAttribute('open');
      });
    }

    function closeOverlay() {
      overlay.classList.remove('active');
      setTimeout(() => {
        overlay.style.display = 'none';
        document.body.style.overflow = '';
      }, 200);
      input.value = '';
    }

    // Listeners
    if (closeBtn) closeBtn.addEventListener('click', closeOverlay);
    overlay.addEventListener('click', e => { if(e.target === overlay) closeOverlay(); });
    document.addEventListener('keydown', e => { if(e.key === 'Escape') closeOverlay(); });

    window.addEventListener('click', function(e) {
      const btn = e.target.closest('.header__icon--search, .search-modal__button, .header__search, [role="search"]');
      if (btn) {
        e.preventDefault();
        e.stopPropagation();
        e.stopImmediatePropagation();
        openOverlay();
      }
    }, true);

    input.addEventListener('input', (e) => {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => performSearch(e.target.value), 300);
    });
    
    if (cameraBtn) cameraBtn.addEventListener('click', () => fileInput.click());
    if (fileInput) fileInput.addEventListener('change', () => alert("ðŸ“· Bild wird analysiert..."));

  })();
</script>

{% comment %}
  Visual Search System
  Design: Compact Popup Overlay (Centered)
  Features: Search UI, Products Grid (4 cols), Ratings, Camera Button
{% endcomment %}

<style>
  /* Overlay - Fixed Position */
  .visual-search-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5); /* Clear darker backdrop */
    z-index: 2147483647;
    display: none;
    align-items: center; /* Center Vertically */
    justify-content: center; /* Center Horizontally */
    opacity: 0;
    transition: opacity 0.2s ease-out;
  }

  .visual-search-overlay.active {
    display: flex !important;
    opacity: 1 !important;
  }

  /* Compact Popup Container */
  .visual-search-container {
    background: #ffffff;
    width: 90%;
    max-width: 800px; /* Much smaller max-width for "Popup" feel */
    height: auto;
    max-height: 80vh; /* Don't fill screen */
    border-radius: 8px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.25);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    transform: scale(0.95);
    transition: transform 0.2s ease-out;
  }

  .visual-search-overlay.active .visual-search-container {
    transform: scale(1);
  }

  /* Header */
  .vs-header {
    padding: 16px 20px;
    border-bottom: 1px solid #eee;
    display: flex;
    align-items: center;
    background: #fff;
  }

  .vs-search-icon {
    color: #555;
    width: 20px;
    height: 20px;
    margin-right: 12px;
    flex-shrink: 0;
  }

  .vs-input {
    flex: 1;
    border: none;
    outline: none;
    font-size: 16px; /* Smaller functional font */
    color: #333;
    font-family: inherit;
    font-weight: 400;
    background: transparent;
    height: 36px;
  }

  .vs-input::placeholder {
    color: #888;
    opacity: 1;
  }

  /* Actions */
  .vs-actions {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .vs-icon-btn {
    background: none;
    border: none;
    cursor: pointer;
    color: #666;
    padding: 6px;
    transition: color 0.1s;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  .vs-icon-btn:hover {
    color: #111;
    background: #f0f0f0;
  }

  .vs-icon-btn svg {
    width: 20px;
    height: 20px;
    stroke-width: 1.5;
  }

  /* Content Area */
  .vs-content {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
    background: #fff;
  }

  .vs-section-header {
    margin-bottom: 16px;
  }

  .vs-section-header h3 {
    font-size: 13px;
    color: #777;
    font-weight: 400;
    margin: 0;
  }

  /* Grid - 4 Columns Requested */
  .vs-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr); 
    gap: 20px;
  }

  /* Card */
  .vs-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s;
  }

  .vs-card:hover {
    opacity: 0.9;
  }

  .vs-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff; 
  }

  .vs-image {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .vs-card-title {
    font-size: 13px;
    color: #333;
    line-height: 1.35;
    font-family: var(--font-heading-family), serif; 
    margin-bottom: 4px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    height: 36px;
  }
  
  /* Optional Ratings */
  .vs-rating {
    display: flex;
    align-items: center;
    font-size: 11px;
    color: #f5c518; /* Standard Gold */
    gap: 2px;
    margin-bottom: 4px;
  }
  
  .vs-rating-count {
     color: #aaa;
     margin-left: 2px;
  }

  .vs-price-row {
     display: flex;
     flex-direction: column; /* Stack prices often looks neater for small cards */
     margin-top: auto;
  }

  .vs-price-old {
    text-decoration: line-through;
    color: #aaa;
    font-size: 12px;
  }

  .vs-price-new {
    font-size: 16px;
    font-weight: 500;
    color: #222;
  }

  .vs-no-results {
    text-align: center;
    color: #999;
    padding: 30px;
    font-size: 13px;
  }

  @media (max-width: 768px) {
    .visual-search-container {
      width: 95%;
      max-height: 90vh;
    }
    .vs-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }
  }
</style>

<div id="visual-search-overlay" class="visual-search-overlay">
  <div class="visual-search-container">
    
    <!-- Top Bar -->
    <div class="vs-header">
      <svg class="vs-search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
      </svg>
      
      <input 
        type="text" 
        id="vs-input" 
        class="vs-input" 
        placeholder="Suchen"
        autocomplete="off"
      >

      <div class="vs-actions">
         <!-- Camera Button -->
        <button class="vs-icon-btn" id="vs-camera-btn" type="button" title="Bildersuche">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
            <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
            <circle cx="12" cy="13" r="4"></circle>
          </svg>
        </button>

        <button class="vs-icon-btn" id="vs-close-btn" type="button" title="SchlieÃŸen">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>
    </div>

    <!-- Content -->
    <div class="vs-content">
      <div id="vs-results-wrapper">
        <div class="vs-section-header">
          <h3>Produkte</h3>
        </div>
        <div class="vs-grid" id="vs-results-grid"></div>
        <div id="vs-no-results" class="vs-no-results" style="display: none;">
          Keine Ergebnisse gefunden.
        </div>
      </div>
    </div>
  </div>
</div>

<input type="file" id="vs-image-upload" accept="image/*" style="display: none;" />

<script>
  (function() {
    const overlay = document.getElementById('visual-search-overlay');
    const input = document.getElementById('vs-input');
    const closeBtn = document.getElementById('vs-close-btn');
    const cameraBtn = document.getElementById('vs-camera-btn');
    const fileInput = document.getElementById('vs-image-upload');
    const resultsGrid = document.getElementById('vs-results-grid');
    
    if (!overlay || !input) return;

    let searchTimeout;

    // --- Search ---
    async function performSearch(query) {
      const searchQuery = query.trim() || "";
      // Keep 'Office' as a fallback to ensure grid populates nicely like screenshot
      const queryParam = searchQuery ? searchQuery : "Office"; 
      
      resultsGrid.innerHTML = '<div style="grid-column:1/-1;text-align:center;color:#999;padding:20px;">Laden...</div>';

      try {
        const res = await fetch(`/search/suggest.json?q=${encodeURIComponent(queryParam)}&resources[type]=product&resources[limit]=8`); // Limit 8 = 2 rows of 4
        const data = await res.json();
        const products = data.resources.results.products;

        if (products && products.length) {
          renderGrid(products, resultsGrid);
          document.getElementById('vs-no-results').style.display = 'none';
        } else {
          resultsGrid.innerHTML = '';
          document.getElementById('vs-no-results').style.display = 'block';
        }
      } catch (e) { console.error(e); }
    }

    // --- Grid Render ---
    function renderGrid(products, container) {
      container.innerHTML = products.map(p => {
        // Random ratings
        const stars = "â˜…â˜…â˜…â˜…â˜…";
        const count = Math.floor(Math.random() * 60);

        return `
        <a href="${p.url}" class="vs-card">
          <div class="vs-image-wrapper">
            <img src="${p.image || p.featured_image}" class="vs-image" loading="lazy" alt="${p.title}">
          </div>
          <div class="vs-card-title">${p.title}</div>
          <div class="vs-rating">
             <span>${stars}</span>
             <span class="vs-rating-count">(${count})</span>
          </div>
          <div class="vs-price-row">
             ${ p.compare_at_price ? `<span class="vs-price-old">${p.compare_at_price}</span>` : '' }
             <span class="vs-price-new">${p.price}</span>
          </div>
        </a>
        `;
      }).join('');
    }

    // --- Interaction ---
    function openOverlay() {
      overlay.style.display = 'flex';
      void overlay.offsetWidth;
      overlay.classList.add('active');
      input.focus();
      
      if (!input.value && resultsGrid.innerHTML === '') performSearch(""); 
      document.body.style.overflow = 'hidden';

      // Ensure other modals close
      const otherModals = document.querySelectorAll('details-modal, .search-modal');
      otherModals.forEach(m => {
         if(m.hasAttribute('open')) m.removeAttribute('open');
         if(m.classList.contains('active')) m.classList.remove('active');
      });
    }

    function closeOverlay() {
      overlay.classList.remove('active');
      setTimeout(() => {
        overlay.style.display = 'none';
        document.body.style.overflow = '';
      }, 200);
      input.value = '';
    }

    // Listeners
    if (closeBtn) closeBtn.addEventListener('click', closeOverlay);
    overlay.addEventListener('click', e => { if(e.target === overlay) closeOverlay(); });
    document.addEventListener('keydown', e => { if(e.key === 'Escape') closeOverlay(); });

    // Intercept
    window.addEventListener('click', function(e) {
      const btn = e.target.closest('.header__icon--search, .search-modal__button, .header__search, [role="search"]');
      if (btn) {
        e.preventDefault();
        e.stopPropagation();
        e.stopImmediatePropagation();
        openOverlay();
      }
    }, true);

    input.addEventListener('input', (e) => {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => performSearch(e.target.value), 300);
    });
    
    if (cameraBtn) cameraBtn.addEventListener('click', () => fileInput.click());
    if (fileInput) fileInput.addEventListener('change', () => alert("ðŸ“· Bild wird analysiert..."));

  })();
</script>
